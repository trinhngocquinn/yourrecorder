<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>YourRecorder</title>
</head>
<body>
  <h1>🎙️ Ghi âm trực tuyến</h1>
  <button id="start">Bắt đầu ghi</button>
  <button id="stop" disabled>Dừng ghi</button>
  <button id="upload" disabled>Lưu vào Google Drive</button>
  <br><br>
  <audio id="player" controls></audio>

  <script>
    let recorder, stream, chunks = [];

    const startBtn = document.getElementById("start");
    const stopBtn = document.getElementById("stop");
    const uploadBtn = document.getElementById("upload");
    const player = document.getElementById("player");

    startBtn.onclick = async () => {
      stream = await navigator.mediaDevices.getUserMedia({ audio: true });
      recorder = new MediaRecorder(stream);
      chunks = [];

      recorder.ondataavailable = e => chunks.push(e.data);
      recorder.onstop = () => {
        const blob = new Blob(chunks, { type: 'audio/webm' });
        const url = URL.createObjectURL(blob);
        player.src = url;
        uploadBtn.disabled = false;

        // Gửi tới Google Apps Script (chỉ nếu bạn đã có URL ở phần sau)
        uploadBtn.onclick = () => {
          fetch("PASTE_YOUR_WEB_APP_URL_HERE", {
            method: "POST",
            body: blob
          })
          .then(res => res.text())
          .then(msg => alert(msg))
          .catch(err => alert("Lỗi: " + err));
        };
      };

      recorder.start();
      startBtn.disabled = true;
      stopBtn.disabled = false;
    };

    stopBtn.onclick = () => {
      recorder.stop();
      stream.getTracks().forEach(track => track.stop());
      startBtn.disabled = false;
      stopBtn.disabled = true;
    };
  </script>
</body>
</html>
